{
	"compilerOptions": {
		"baseUrl": "./",
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"outDir": "Target",
		"resolveJsonModule": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "esnext",
		"types": [
			"vite/client"
		]
	},
	"exclude": [
		"**/node_modules/**",
		"**/dist/**"
	],
	"extends": "@playform/build/tsconfig",
	"include": [
		"src",
		"src",
		"src",
		"src",
		"src"
	]
}
